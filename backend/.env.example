OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ENVIRONMENT=development
DEBUG=true

# CORS configuration (comma-separated list of allowed origins)
# Development: use localhost
CORS_ORIGINS=http://localhost:5173
# Production: add your deployed frontend URLs
# CORS_ORIGINS=https://app.example.com,https://staging.example.com,https://www.example.com

# Basic production safety controls
GENERATE_RATE_LIMIT_PER_MINUTE=30
MAX_GENERATE_REQUEST_BYTES=16384
TRUST_X_FORWARDED_FOR=true

# Langfuse tracing (optional)
LANGFUSE_TRACING_ENABLED=true
LANGFUSE_PUBLIC_KEY=pk-lf-...
LANGFUSE_SECRET_KEY=sk-lf-...
LANGFUSE_HOST=https://cloud.langfuse.com
LANGFUSE_TRACING_ENVIRONMENT=Development # Or Production

# News and Web Search API Keys
NEWSAPI_API_KEY=newsapi_api_key
BRAVE_API_KEY=your_brave_key_here     # Free tier available
SERPER_API_KEY=your_serper_key_here   # Optional alternative
